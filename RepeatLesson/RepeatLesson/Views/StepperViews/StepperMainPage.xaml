<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:RepeatLesson.Views.StepperViews"
             mc:Ignorable="d"
             x:Class="RepeatLesson.Views.StepperViews.StepperMainPage">
    <TableView Intent="Menu">
        <TableRoot>
            <TableSection>
                

                <TextCell Text="Basic Stepper XAML" 
                          Detail="Implement a Stepper in XAML"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type local:BasicStepperXAMLPage}" />

                <TextCell Text="Basic Stepper Bindings" 
                          Detail="Implement a Stepper with data bindings"
                          Command="{Binding NavigateCommand}"
                          CommandParameter="{x:Type local:BasicStepperBindingsPage}" />
            </TableSection>
        </TableRoot>
    </TableView>
</ContentPage>